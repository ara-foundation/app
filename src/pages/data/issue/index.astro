---
import Layout from "@/layouts/PanelViewLayout.astro";
import BackButton from "@/components/custom-ui/BackButton";
import IssuePanel from "@/components/issue/IssuePanel";
import NotificationBanner from "@/components/NotificationBanner";
import { MenuItemProps } from "@/components/menu/MenuItem";
import IssueStatsPanel from "@/components/issue/IssueStatsPanel";

const additional: MenuItemProps[] = [
  {
    icon: "cascading-work",
    label: "Cascading Work",
    uri: "/maintainer/work",
  },
  {
    icon: "issue",
    label: "Issues List/Roadmap",
    uri: "/data/project",
    active: true,
  },
  {
    icon: "issue",
    label: "Issue",
    uri: "/data/issue",
    active: true,
  },
];
---

<Layout subtitle="Data Section: Issue" additional={additional}>
  <BackButton slot="left" uri="/data/project" />
  <NotificationBanner
    type="info"
    title="Complete a quest..."
    className="mb-8 text-gray-200"
    titleClassName="text-gray-200!"
    slot="center"
  >
    Please reply to the "Project Timeline" chat.'
  </NotificationBanner>

  <IssuePanel
    slot="center"
    uri="/data/issue"
    number={"0"}
    title="Issue Title"
    description="Issue description."
    type="improvement"
    storage="arada-"
    projectId="1"
    categoryId="1"
    stats={{}}
    vpAmount={0}
    currentVP={0}
    topVP={0}
    minVP={0}
    client:load
  />
  <IssueStatsPanel slot="right" client:load />
</Layout>
