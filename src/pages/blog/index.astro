---
export const prerender = false;
import Layout from "@/layouts/PanelViewLayout.astro";
import BackButton from "@/components/custom-ui/BackButton";
import BlogPanel from "@/components/blog/BlogPanel";
import { getBlogById } from "@/server-side/blog";
import { ObjectId } from "mongodb";
import { MenuName } from "@/components/navbar/WorkNavbar.astro";

// Get blog ID from query parameters
const blogIdParam = Astro.url.searchParams.get("id");

// Validate blog ID
if (!blogIdParam) {
    return Astro.redirect("/star/404?method=getBlogIdParam");
}

// Validate ObjectId format
try {
    new ObjectId(blogIdParam);
} catch (error) {
    return Astro.redirect("/star/404?method=validateBlogId");
}

// Fetch blog from database
const blog = await getBlogById(blogIdParam);
if (!blog) {
    return Astro.redirect("/star/404?method=getBlogById");
}
---

<Layout hideLinks={Object.keys(MenuName)}>
    <BackButton slot="left" client:load />

    <BlogPanel slot="center" {...blog} client:load />
</Layout>

<style is:global>
    /* Markdown content styling - structural only, colors handled by Tailwind in BlogPanel */
    .prose h1 {
        font-size: 2.25em;
        font-weight: 800;
        margin-top: 0;
        margin-bottom: 0.8888889em;
        line-height: 1.1111111;
    }

    .prose h2 {
        font-size: 1.5em;
        font-weight: 700;
        margin-top: 2em;
        margin-bottom: 1em;
        line-height: 1.3333333;
    }

    .prose h3 {
        font-size: 1.25em;
        font-weight: 600;
        margin-top: 1.6em;
        margin-bottom: 0.6em;
        line-height: 1.6;
    }

    .prose h4 {
        font-size: 1.125em;
        font-weight: 600;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
    }

    .prose p {
        margin-top: 1.25em;
        margin-bottom: 1.25em;
        line-height: 1.75;
    }

    .prose code {
        font-size: 0.875em;
        font-weight: 600;
        padding: 0.125em 0.375em;
        border-radius: 0.25rem;
    }

    .prose pre {
        margin-top: 1.7142857em;
        margin-bottom: 1.7142857em;
        border-radius: 0.375rem;
        padding-top: 0.8571429em;
        padding-right: 1.1428571em;
        padding-bottom: 0.8571429em;
        padding-left: 1.1428571em;
        overflow-x: auto;
    }

    .prose pre code {
        background-color: transparent;
        padding: 0;
    }

    .prose a {
        text-decoration: underline;
        font-weight: 500;
    }

    .prose a:hover {
        text-decoration: underline;
    }

    .prose strong {
        font-weight: 600;
    }

    .prose em {
        font-style: italic;
    }

    /* Lists */
    .prose ul,
    .prose ol {
        margin-top: 1.25em;
        margin-bottom: 1.25em;
        padding-left: 1.625em;
    }

    .prose li {
        margin-top: 0.5em;
        margin-bottom: 0.5em;
    }

    .prose ul li {
        list-style-type: disc;
    }

    .prose ol li {
        list-style-type: decimal;
    }

    /* Blockquotes */
    .prose blockquote {
        margin-top: 1.6em;
        margin-bottom: 1.6em;
        padding-left: 1em;
        border-left: 0.25em solid;
        font-style: italic;
    }

    /* Horizontal rules */
    .prose hr {
        margin-top: 3em;
        margin-bottom: 3em;
        border: none;
        border-top: 1px solid;
    }

    /* Images */
    .prose img {
        margin-top: 2em;
        margin-bottom: 2em;
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
    }

    /* Tables */
    .prose table {
        width: 100%;
        margin-top: 2em;
        margin-bottom: 2em;
        border-collapse: collapse;
    }

    .prose th,
    .prose td {
        padding: 0.75em;
        border: 1px solid;
        text-align: left;
    }

    .prose th {
        font-weight: 600;
    }
</style>
