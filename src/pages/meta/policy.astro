---
export const prerender = true;
import V2Layout from "@/layouts/LandingLayout.astro";

import HeroSection from "@/layouts/sections/HeroSection.astro";
import ContentSection from "@/components/PolicyInfoPanel";
import SuperpowersPanel from "@/components/SuperpowersInfoPanel";
import ThreeColumnGrid from "@/components/grid/ThreeColumnGrid.astro";
import MenuPanel from "@/components/menu/MenuPanel";
import MenuItem from "@/components/menu/MenuItem";
import { getIcon } from "@/components/icon";

const ContentMenuItems = [
  {
    icon: getIcon("github"),
    label: "GitHub and repos stuff",
    isActive: false,
    url: "#github",
  },
  {
    icon: getIcon("analytics"),
    label: "Analytics",
    isActive: false,
    url: "#analytics",
  },
  { icon: getIcon("money"), label: "Money", isActive: false, url: "#money" },
  { icon: getIcon("email"), label: "Email", isActive: false, url: "#email" },
];
---

<V2Layout>
  <HeroSection
    title={"Ara Privacy Policy"}
    subtitle="(fun-storylike-edition)"
  >
    <p class="text-base opacity-80 max-w-2xl mx-auto leading-relaxed">
      We believe privacy should be simple and transparent. So here's the deal,
      no fine print, no trickery.
    </p>
    <p class="text-sm opacity-70 mt-8 text-right">
      Written by Medet Ahmetson.<br />
    </p>
  </HeroSection>
  <ThreeColumnGrid>
    <MenuPanel
      slot="left"
      activeMenuItem="work"
      title="Content Menu"
      onlyCustomChildren={true}
    >
      {ContentMenuItems.map((menuItem) => <MenuItem {...menuItem} />)},
    </MenuPanel>
    <SuperpowersPanel slot="right" />
    <div slot="center" class="bg-white rounded-lg shadow-sm p-8 space-y-12">
      <ContentSection
        title="1. GitHub and Repos stuff"
        color="text-green-600"
        items={[
          {
            icon: "G",
            text: "You log in with GitHub â†’ we grab your login info and repos.",
          },
          {
            icon: "R",
            text: "We keep them so Ara can show your projects and contributions.",
          },
          {
            icon: "E",
            text: "Your projects are visible on the platform because we want everything out in the open.",
          },
          {
            icon: "P",
            text: "In the future, we might use this data to recommend cool tasks and people to you.",
          },
        ]}
        footer="That's it."
        footerIcon="heart"
      />

      <ContentSection
        title="2. Analytics"
        subtitle='a.k.a. "how we make Ara less clunky"'
        color="text-orange-600"
        items={[
          {
            icon: "A",
            text: "We use Google Analytics to see what pages people visit, how long they stay, and where they click.",
          },
          {
            icon: "X",
            text: "This helps us improve the design and user experience.",
          },
          {
            icon: "E",
            text: "We don't use it to stalk you, sell you stuff, or anything creepy. Promise.",
          },
        ]}
      />

      <ContentSection
        title="3. Money Things"
        color="text-blue-600"
        icon="ðŸ’°"
        items={[
          {
            icon: "G",
            text: "You log in with GitHub â†’ we grab your login info and repos.",
          },
          {
            icon: "R",
            text: "We keep them so Ara can show your projects and contributions.",
          },
          {
            icon: "E",
            text: "Your projects are visible on the platform because we want everything out in the open.",
          },
          {
            icon: "P",
            text: "In the future, we might use this data to recommend cool tasks and people to you.",
          },
        ]}
      />

      <ContentSection
        title="4. Emails"
        color="text-purple-600"
        icon="ðŸ“§"
        items={[
          {
            icon: "H",
            text: "We collect your email when you sign up or subscribe.",
          },
          {
            icon: "X",
            text: "We'll only use it for the newsletters you specifically asked for.",
          },
          {
            icon: "E",
            text: 'No spam, no "special offers," no selling your email to shady marketers.',
          },
        ]}
      />
    </div>
  </ThreeColumnGrid>
</V2Layout>

<style>
  .cascade-blue {
    color: #4a90e2;
  }
  .cascade-purple {
    color: #6b46c1;
  }
  .cascade-dark {
    color: #1f2937;
  }

  .bg-gradient-purple {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
</style>
