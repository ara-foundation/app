---
export const prerender = true;
import V2Layout from "@/layouts/LandingLayout.astro";

import HeroSection from "@/layouts/sections/HeroSection.astro";
import LeftImageRightPanels from "@/layouts/sections/LeftImageRightPanelsSection.astro";
import PageLikePanel from "@/components/panel/PageLikePanel";
import { ItemName } from "@/components/utilitified_decorations/LandingNavbar.astro";
import Button from "@/components/custom-ui/Button";
import SectionScrollButton from "@/components/ScrollingToSectionButton";
import HorizontalPanels from "@/layouts/sections/HorizontalPanelsSection.astro";
import { BgType } from "@/types/eventTypes";
import Section from "@/layouts/sections/BaseSection.astro";
import Badge from "@/components/badge/Badge";
import HorizontalSection from "@/layouts/sections/HorizontalPanelsSection.astro";
import BasePanel from "@/components/panel/Panel";
import { getIcon } from "@/components/icon";

const contributorChalllengesSection = {
  prefix: "contributorChallenges",
  cols: 2,
  panels: [
    {
      title: "üöÄ Hard to start",
      children: "Huge issue lists, unclear onboarding.",
    },
    {
      title: "üò∞ Intimidating",
      children: "Fear of making mistakes, harsh feedback.",
    },
    {
      title: "üë§ Low recognition",
      children: "Efforts often go unnoticed, especially non-code work.",
    },
    {
      title: "ü§ù No mentorship",
      children: "Hard to understand large codebases alone.",
    },
    {
      title: "üíÄ Dead issues",
      children: "PRs get ignored, contributors get demotivated.",
    },
    {
      title: "‚ò†Ô∏è Toxicity",
      children: "Not all communities are welcoming.",
    },
  ],
  title: "Contributor's Challenges",
  img: {
    src: "https://dummyimage.com/400x300/f5f5f5/333333?text=Developer+Illustration",
    alt: "Developer illustration",
  },
};

const howItWorks = [
  {
    icon: getIcon("navigation"),
    title: "Discovery designed for contributors",
    children:
      "Find projects and maintainers you want to help. We work on the most suited platform for contributors.",
  },
  {
    icon: getIcon("chat"),
    title: "Smooth onboarding",
    children: "Each contributor receives a human intro to a project.",
  },
  {
    icon: getIcon("person"),
    title: "Get mentorship and guidance",
    children: "Ask maintainer about how the code work.",
  },
  {
    icon: getIcon("project"),
    title: "Fork that is discoverable",
    children:
      "and link it to the issue, to make your own project discoverable.",
  },
];
const howItWorksBottomPanel = {
  icon: getIcon("star"),
  title: "Reward",
  children:
    "Get rewarded, potentially to become a maintainer, or start your own project with your contributors.",
};

const projectStats = [
  {
    number: "12",
    label: "signups",
    period: "In a week",
    children:
      "In the last week, we had 12 signups and there are 12 people signed up for newsletters.",
  },
  {
    number: "3",
    label: "projects",
    period: "In a week",
    children:
      "There are three projects added on Ara. Find out more and vote for the next one.",
  },
  {
    number: "28,465",
    label: "votes",
    period: "Voted for release",
    children:
      "In the last week, we had 12 signups and we are working on it asap. To track its progress visit the issue page.",
  },
];
---

<V2Layout
  active={ItemName.ContributorLanding}
  subtitle="For open source contributors"
>
  <HeroSection
    title={"Turn your contributions into quests. Grow your skills. " +
      "Get maintainer's support, become part of greater " +
      "project."}
    actions={[
      {
        variant: "blue",
        replaceWithChildren: true,
        children: await SectionScrollButton({
          children: "Learn More",
          href: "#Challenges",
          className: " text-white hover:text-gray-200",
        }),
      },
    ]}
  >
    <p class="text-xl text-blue-100 mb-8 max-w-3xl mx-auto">
      We're building the Contributor experience on Ara ‚Äî a new way to
      join open source projects, level up through quests, and get mentorship and
      recognition.
    </p>
    <PageLikePanel
      titleCenter={true}
      title="The Contributor feature is still in development."
      className="bg-white/10 backdrop-blur-sm border-none text-white"
    >
      <div class="flex items-start space-x-3">
        <p class="text-blue-100">
          Upvote the "contributor page" issue on our roadmap to prioritize ‚Äî to
          upvote, you need to be Ara's user.
          <a href="#" class="text-blue-300 underline ml-1"
            >Check how Ara works!</a
          >
        </p>
      </div>
      <div class="flex items-start space-x-3">
        <div class="w-5 h-5 bg-green-400 rounded-full mt-1 flex-shrink-0"></div>
        <p class="text-blue-100">
          Sign up for our newsletter to get notified the moment it goes live.
        </p>
      </div>

      <div class="mt-6 flex flex-col sm:flex-row items-center justify-between">
        <Button variant="primary" className="mb-4 sm:mb-0"> Notify Me </Button>
        <p class="text-sm text-blue-200">
          Note: We will send you exactly one email when the Contributor page is
          ready. Nothing else. No spam.
        </p>
      </div>
    </PageLikePanel>
  </HeroSection>
  <LeftImageRightPanels {...contributorChalllengesSection}>
    <p class="text-xl text-gray-600 mb-2">
      Open source is powerful, but being a contributor isn't always easy.
    </p>
  </LeftImageRightPanels>

  <HorizontalPanels
    cols={2}
    bottomPanel={howItWorksBottomPanel}
    panels={howItWorks}
    bg={{ sectionBgType: BgType.infoSection }}
    title="How Ara Works for Contributors"
  />
  <Section
    actions={[
      {
        variant: "blue",
        children: "Sign In as a Contributor",
        uri: "/login?role=contributor",
      },
      {
        variant: "gray",
        children: "Browse Projects",
        uri: "/data/projects",
      },
    ]}
    icon={getIcon("dev")}
    title="The Contributor platform is still in development."
    bg={{ sectionBgType: BgType.normalSection, overlay: "rectangles" }}
  >
    <!-- <p class="text-xl text-gray-400 mb-8 max-w-3xl mx-auto">Join Ara today and start your journey as a valued open source contributor.</p> -->
    <div class="flex items-start space-x-4 text-left max-w-2xl mx-auto">
      <div
        class="w-8 h-8 bg-yellow-400 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
      >
        <Badge variant="yellow">!</Badge>
      </div>
      <div>
        <h3 class="font-semibold mb-2">
          Upvote the issue that will relaunch it
        </h3>
        <p class="text-yellow-100">
          But to upvote, you need to be a registered user of Ara. Check
          how Ara works!.
        </p>
      </div>
    </div>

    <div class="flex items-start space-x-4 text-left max-w-2xl mx-auto">
      <div
        class="w-8 h-8 bg-green-400 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
      >
        {getIcon("person")}
      </div>
      <div>
        <h3 class="font-semibold mb-2">Sign up for our newsletter</h3>
        <p class="text-blue-100">to get notified the moment it goes live.</p>
      </div>
    </div>

    <div
      class="my-4 flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6"
    >
      <Button variant="secondary" size="lg"> Notify Me </Button>
      <p class="text-sm text-blue-200 max-w-md">
        Note: We will send you exactly one email when the Contributor page is
        ready. Nothing else. No spam.
      </p>
    </div>
  </Section>
  <HorizontalSection
    cols={projectStats.length}
    title=""
    className="py-16 bg-blue-gradient"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          projectStats.map((stat, index) => (
            <BasePanel key={index.toString()} className="text-center">
              <div class="mb-4 round-lg border-round-lg bg-green-50">
                <div class="text-3xl font-bold text-cascade-blue mb-1">
                  {stat.number}
                </div>
                <div class="text-lg text-gray-700">{stat.label}</div>
                <div class="text-sm font-medium text-gray-900 mb-2">
                  {stat.period}
                </div>
              </div>
              <p class="text-sm text-gray-600 leading-relaxed">
                {stat.children}
              </p>
            </BasePanel>
          ))
        }
      </div>
    </div>
  </HorizontalSection>
</V2Layout>
