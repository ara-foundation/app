---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
import "@/styles/motion.css";
import Header from "@/components/utilitified_decorations/LandingHeader.astro";
import Footer from "@/components/utilitified_decorations/Footer.astro";

interface Props {}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/cascadefund_logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>CascadeFund</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-gray-200 dark:bg-gray-700">
    <Header />

    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @import "@chatscope/chat-ui-kit-styles/dist/default/styles.min.css";
